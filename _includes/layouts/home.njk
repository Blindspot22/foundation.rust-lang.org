<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rust Foundation - {{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    {% include "metatags.njk" %}
    <script defer data-domain="foundation.rust-lang.org" src="https://plausible.io/js/plausible.js"></script>
    
    <!-- favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/img/favicon/favicon-16x16.png">
    <link rel="manifest" href="/img/favicon/site.webmanifest">
  </head>
  <body>
    <header>
    {% include "nav.njk" %}
        <section id="splash">
            <div class="container">
                <h1>Rust Foundation</h1>
                <h2>A new approach to sustaining and growing a large, participatory, open source ecosystem<h2>
            </div>
        </section>
    </header>

    <main class="{% if templateClass %}{{ templateClass }}{% endif %}">
        {{ content | safe }}
    </main>

    {% include "footer.njk" %}

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
